@model IEnumerable<CompetitionManager.Models.Competition>

@{
    ViewBag.Title = "Index";
}

<h2>List of competitions</h2>

<table class="table">
    <tr>
        <th>
            Game
        </th>
        <th>
            Organizer's PESEL
        </th>
        <th>
            Rulebook
        </th>
        <th>
            Start date 
        </th>
        <th>
            End date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Game.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MainOrganizer.PESEL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rulebook.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
</table>
